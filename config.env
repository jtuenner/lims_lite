# === APPLICATION SETTINGS ===
APP_ENV=development
LIMS_SECRET=change-this-to-a-long-random-string-in-production
BASE_URL=http://localhost:8000

# === DATABASE ===
# For development (SQLite per tenant - will change to PostgreSQL for production)
DB_FOLDER=customer_dbs

# For production (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/lims_production

# === REDIS (for sessions and caching) ===
REDIS_URL=redis://localhost:6379/0

# === STRIPE (Payment Processing) ===
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# === SENDGRID (Email Service) ===
SENDGRID_API_KEY=SG....
FROM_EMAIL=noreply@limslite.com
ADMIN_EMAIL=admin@limslite.com

# === SENTRY (Error Tracking) ===
SENTRY_DSN=https://...@sentry.io/...

# === FILE UPLOADS ===
UPLOAD_BASE=uploads
MAX_FILE_SIZE=10485760  # 10MB in bytes
BACKUP_DIR=backups

# === TENANT LIMITS (defaults) ===
LICENSE_LIMIT=5
DEFAULT_STORAGE_GB=5

# === DEVELOPMENT ONLY ===
DEV_TENANT=devlab  # Use this tenant name for localhost testing